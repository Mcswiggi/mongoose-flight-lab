<%- include('../partials/html-head') %>
  <h1><%= title %> </h1>
  <body>
    <nav>
      <a href="/flights">All Flights</a>
      <a href="/flights/new">Add Flight</a>
    </nav>
    <br />
    Today's Date: <%= date %>
    <br />
    Departure Date: ////update to a year later <%= date %>
    <br />
    Departure Time/current time: <%= time %>
    <table>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departure</th>
      <% flights.forEach(flight => { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs %></td>
        <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>

      </tr>
      <% }) %>
    </table>

<%- include('../partials/footer') %>
